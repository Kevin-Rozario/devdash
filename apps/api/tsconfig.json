{
    "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",                  
    "lib": ["ES2022"],                   
    "module": "NodeNext",                  
    "moduleResolution": "NodeNext",      
    "esModuleInterop": true,             
    "forceConsistentCasingInFileNames": true,

    /* Paths and Aliases */
    "baseUrl": "./src",                  
    "paths": {
      "@configs/*": ["configs/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"]
    },

    /* Type Checking */
    "strict": true,                      
    "noImplicitAny": true,               
    "strictNullChecks": true,            
    "skipLibCheck": true,                

    /* Output */
    "outDir": "dist",                    
    "rootDir": "src",                    
    "removeComments": true,              
    "sourceMap": true,                   

    /* Node.js Settings */
    "types": ["node"],                   
    "resolveJsonModule": true,           
    "allowSyntheticDefaultImports": true,
    "allowJs": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests/**/*.test.ts"]


}
